{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "tsc",
    "tasks": [
        {
            "taskName": "tsc",
            "command": "${workspaceRoot}/node_modules/.bin/tsc",
            "suppressTaskName": true,
            "isShellCommand": true,
            "args": ["-w", "-p", "."],
            "showOutput": "silent",
            "isBackground": true,
            "isBuildCommand": true,
            "problemMatcher": "$tsc-watch"
        }
    ]
}